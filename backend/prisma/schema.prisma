generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

model User {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  password       String
  role           UserRole
  isApproved     Boolean  @default(false)
  emailVerified  Boolean  @default(false)
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  courses      Course[]      @relation("InstructorCourses")
  enrollments  Enrollment[]
  quizAttempts QuizAttempt[]
  progress     Progress[]
  certificates Certificate[]
  payments     Payment[]

  PasswordReset     PasswordReset[]
  EmailVerification EmailVerification?
  RefreshToken      RefreshToken[]

  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  // New relations for instructor dashboard
  lessonProgress        LessonProgress[]
  lessonQuestions       LessonQuestion[]
  authoredAnnouncements Announcement[]         @relation("AuthoredAnnouncements")
  assignmentSubmissions AssignmentSubmission[]
  gradebookEntries      GradebookEntry[]
  courseVersions        CourseVersion[]
}

model PasswordReset {
  token     String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model EmailVerification {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Course {
  id          String  @id @default(cuid())
  title       String
  subtitle    String?
  description String
  level       String
  category    String
  language    String  @default("en")
  duration    Int // duration in minutes

  // Media assets
  thumbnailUrl  String?
  introVideoUrl String?

  // Pricing
  isPremium          Boolean   @default(false)
  price              Float     @default(0) // Price in dollars
  currency           String    @default("USD")
  discountPercentage Float     @default(0)
  discountEndDate    DateTime?

  // Publishing & Status
  status               String    @default("DRAFT") // DRAFT, PRIVATE, PUBLISHED, SCHEDULED
  scheduledPublishDate DateTime?

  // SEO & Discoverability
  tags           String[] @default([]) // Tags array
  seoTitle       String?
  seoDescription String?
  urlSlug        String?  @unique
  ogImageUrl     String?

  // Auditing & Analytics
  isDeleted       Boolean   @default(false)
  deletedAt       DateTime?
  enrollmentCount Int       @default(0)
  averageRating   Float     @default(0)
  ratingCount     Int       @default(0)
  completionRate  Float     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  instructor   User   @relation("InstructorCourses", fields: [instructorId], references: [id])
  instructorId String

  modules          Module[]
  enrollments      Enrollment[]
  quizzes          Quiz[]
  payments         Payment[]
  certificates     Certificate[]
  announcements    Announcement[]
  assignments      Assignment[]
  gradebookEntries GradebookEntry[]
  versions         CourseVersion[]

  @@index([instructorId])
  @@index([category])
  @@index([level])
  @@index([status])
  @@index([urlSlug])
  @@index([isDeleted])
  @@index([isPremium])
  @@index([price])
  @@index([createdAt])
  @@index([category, level])
  @@index([isPremium, price])
  @@index([instructorId, status])
  @@index([status, createdAt])
}

// Course version history for auditing
model CourseVersion {
  id            String @id @default(cuid())
  versionNumber Int
  changeType    String // created, updated, published, archived
  changes       String // JSON string of changes

  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String

  changedBy   User   @relation(fields: [changedById], references: [id])
  changedById String

  createdAt DateTime @default(now())

  @@index([courseId])
  @@index([changedById])
  @@index([createdAt])
  @@index([courseId, versionNumber])
}

model Module {
  id       String @id @default(cuid())
  title    String
  order    Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String

  createdAt DateTime @default(now())

  contents Content[]

  Progress Progress[]
  lessons  Lesson[]

  @@index([courseId])
  @@index([createdAt])
}

model Content {
  id       String @id @default(cuid())
  type     String // e.g., VIDEO, PDF, LINK
  url      String
  title    String
  module   Module @relation(fields: [moduleId], references: [id])
  moduleId String

  @@index([moduleId])
  @@index([type])
  @@index([moduleId, type]) // Composite index for filtering content by module and type
}

model Enrollment {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId   String
  enrolledAt DateTime @default(now())

  @@unique([userId, courseId]) // Prevent duplicate enrollments
  @@index([userId])
  @@index([courseId])
  @@index([enrolledAt])
  @@index([userId, courseId]) // Composite index for enrollment checks
}

model Quiz {
  id        String     @id @default(cuid())
  title     String
  course    Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  String
  questions Question[]

  QuizAttempt QuizAttempt[]

  @@index([courseId])
}

model Question {
  id      String   @id @default(cuid())
  text    String
  type    String // MCQ, TRUE_FALSE, SHORT
  quiz    Quiz     @relation(fields: [quizId], references: [id])
  quizId  String
  options Option[] // Only for MCQs
  correct String // Store correct answer (simple string or json)

  @@index([quizId])
  @@index([type])
}

model Option {
  id         String   @id @default(cuid())
  text       String
  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  @@index([questionId])
}

model QuizAttempt {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  quizId      String
  score       Float
  attemptDate DateTime @default(now())

  @@index([userId])
  @@index([quizId])
  @@index([attemptDate])
  @@index([userId, quizId]) // Composite index for user quiz attempts
  @@index([userId, attemptDate]) // Composite index for user attempt history
}

model Progress {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  module      Module    @relation(fields: [moduleId], references: [id])
  moduleId    String
  completed   Boolean   @default(false)
  completedAt DateTime?

  @@index([userId])
  @@index([moduleId])
  @@index([completed])
  @@index([userId, moduleId]) // Composite index for progress lookup
  @@index([userId, completed]) // Composite index for completed progress queries
}

model Certificate {
  id             String   @id @default(cuid())
  user           User     @relation(fields: [userId], references: [id])
  userId         String
  course         Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId       String
  issuedAt       DateTime @default(now())
  certificateUrl String

  @@index([userId])
  @@index([courseId])
  @@index([issuedAt])
  @@index([userId, courseId]) // Composite index for certificate lookup
}

model Payment {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  course        Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId      String
  amount        Float
  tax           Float    @default(0)
  total         Float    @default(0)
  currency      String   @default("USD")
  status        String // pending, completed, failed
  provider      String // Stripe, PayPal
  transactionId String?  @unique
  metadata      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([courseId])
  @@index([status])
  @@index([currency])
  @@index([provider])
  @@index([createdAt])
  @@index([userId, status]) // Composite index for user payment history filtering
  @@index([userId, createdAt]) // Composite index for user payment history sorted by date
  @@index([courseId, status]) // Composite index for course payment analytics
}

model Message {
  id         String   @id @default(cuid())
  sender     User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  senderId   String
  receiver   User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  receiverId String
  subject    String
  body       String
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([senderId])
  @@index([receiverId])
  @@index([isRead])
  @@index([createdAt])
  @@index([senderId, createdAt]) // Composite index for sent messages sorted by date
  @@index([receiverId, isRead]) // Composite index for unread messages
  @@index([receiverId, createdAt]) // Composite index for received messages sorted by date
}

// Lesson model for better content organization
model Lesson {
  id          String    @id @default(cuid())
  title       String
  description String?
  content     String? // Rich text content for the lesson
  videoUrl    String? // External video link
  videoFile   String? // Uploaded video file URL
  duration    Int       @default(0) // Duration in minutes
  order       Int // Order within module
  isLocked    Boolean   @default(false) // Lock until previous lesson completed
  releaseDate DateTime? // For drip content - scheduled release
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  module   Module @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  moduleId String

  attachments LessonAttachment[]
  progress    LessonProgress[]
  questions   LessonQuestion[]

  @@index([moduleId])
  @@index([order])
  @@index([isLocked])
  @@index([releaseDate])
  @@index([moduleId, order])
}

// Lesson attachments (PDF, DOC, ZIP, etc.)
model LessonAttachment {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  fileType  String // PDF, DOC, ZIP, etc.
  fileSize  Int // File size in bytes
  createdAt DateTime @default(now())

  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId String

  @@index([lessonId])
  @@index([fileType])
}

// Track lesson progress per student
model LessonProgress {
  id          String    @id @default(cuid())
  completed   Boolean   @default(false)
  completedAt DateTime?
  timeSpent   Int       @default(0) // Time spent in seconds

  user     User   @relation(fields: [userId], references: [id])
  userId   String
  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId String

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
  @@index([completed])
  @@index([userId, completed])
}

// Q&A per lesson
model LessonQuestion {
  id         String   @id @default(cuid())
  question   String
  answer     String?
  isAnswered Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  lesson   Lesson @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId String
  user     User   @relation(fields: [userId], references: [id])
  userId   String

  @@index([lessonId])
  @@index([userId])
  @@index([isAnswered])
  @@index([createdAt])
}

// Course announcements
model Announcement {
  id        String   @id @default(cuid())
  title     String
  content   String
  isPinned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String
  author   User   @relation("AuthoredAnnouncements", fields: [authorId], references: [id])
  authorId String

  @@index([courseId])
  @@index([isPinned])
  @@index([createdAt])
}

// Assignments
model Assignment {
  id                  String    @id @default(cuid())
  title               String
  description         String
  instructions        String?
  maxScore            Int       @default(100)
  dueDate             DateTime?
  allowLateSubmission Boolean   @default(false)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String

  submissions AssignmentSubmission[]

  @@index([courseId])
  @@index([dueDate])
  @@index([createdAt])
}

// Assignment submissions
model AssignmentSubmission {
  id          String    @id @default(cuid())
  content     String? // Text submission
  fileUrl     String? // File submission URL
  fileName    String?
  fileType    String?
  submittedAt DateTime  @default(now())
  score       Float?
  feedback    String?
  gradedAt    DateTime?
  status      String    @default("submitted") // submitted, graded, returned

  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  assignmentId String
  student      User       @relation(fields: [studentId], references: [id])
  studentId    String

  @@unique([assignmentId, studentId])
  @@index([assignmentId])
  @@index([studentId])
  @@index([status])
  @@index([submittedAt])
}

// Gradebook entry for overall course grades
model GradebookEntry {
  id          String   @id @default(cuid())
  grade       Float
  letterGrade String?
  feedback    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  course    Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  String
  student   User   @relation(fields: [studentId], references: [id])
  studentId String

  @@unique([courseId, studentId])
  @@index([courseId])
  @@index([studentId])
  @@index([grade])
}
