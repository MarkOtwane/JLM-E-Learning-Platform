generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STUDENT
  INSTRUCTOR
  ADMIN
}

model User {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  password       String
  role           UserRole
  isApproved     Boolean  @default(false)
  emailVerified  Boolean  @default(false)
  profilePicture String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  courses      Course[]      @relation("InstructorCourses")
  enrollments  Enrollment[]
  quizAttempts QuizAttempt[]
  progress     Progress[]
  certificates Certificate[]
  payments     Payment[]

  PasswordReset     PasswordReset[]
  EmailVerification EmailVerification?
  RefreshToken      RefreshToken[]
}

model PasswordReset {
  token     String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model EmailVerification {
  id        String   @id @default(cuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  level       String
  category    String
  duration    Int // duration in minutes
  isPremium   Boolean  @default(false)
  price       Float    @default(0) // Price in dollars
  currency    String   @default("USD") // Currency code
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  instructor   User   @relation("InstructorCourses", fields: [instructorId], references: [id])
  instructorId String

  modules     Module[]
  enrollments Enrollment[]
  quizzes     Quiz[]
  payments    Payment[]

  Certificate Certificate[]

  @@index([instructorId])
  @@index([category])
  @@index([level])
  @@index([isPremium])
  @@index([price])
  @@index([createdAt])
  @@index([category, level]) // Composite index for course filtering
  @@index([isPremium, price]) // Composite index for premium course queries
  @@index([category, isPremium]) // Composite index for course catalog filtering
}

model Module {
  id       String @id @default(cuid())
  title    String
  order    Int
  course   Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId String

  createdAt DateTime @default(now())

  contents Content[]

  Progress Progress[]

  @@index([courseId])
  @@index([createdAt])
}

model Content {
  id       String @id @default(cuid())
  type     String // e.g., VIDEO, PDF, LINK
  url      String
  title    String
  module   Module @relation(fields: [moduleId], references: [id])
  moduleId String

  @@index([moduleId])
  @@index([type])
  @@index([moduleId, type]) // Composite index for filtering content by module and type
}

model Enrollment {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId   String
  enrolledAt DateTime @default(now())

  @@unique([userId, courseId]) // Prevent duplicate enrollments
  @@index([userId])
  @@index([courseId])
  @@index([enrolledAt])
  @@index([userId, courseId]) // Composite index for enrollment checks
}

model Quiz {
  id        String     @id @default(cuid())
  title     String
  course    Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId  String
  questions Question[]

  QuizAttempt QuizAttempt[]

  @@index([courseId])
}

model Question {
  id      String   @id @default(cuid())
  text    String
  type    String // MCQ, TRUE_FALSE, SHORT
  quiz    Quiz     @relation(fields: [quizId], references: [id])
  quizId  String
  options Option[] // Only for MCQs
  correct String // Store correct answer (simple string or json)

  @@index([quizId])
  @@index([type])
}

model Option {
  id         String   @id @default(cuid())
  text       String
  question   Question @relation(fields: [questionId], references: [id])
  questionId String

  @@index([questionId])
}

model QuizAttempt {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  quizId      String
  score       Float
  attemptDate DateTime @default(now())

  @@index([userId])
  @@index([quizId])
  @@index([attemptDate])
  @@index([userId, quizId]) // Composite index for user quiz attempts
  @@index([userId, attemptDate]) // Composite index for user attempt history
}

model Progress {
  id          String    @id @default(cuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  module      Module    @relation(fields: [moduleId], references: [id])
  moduleId    String
  completed   Boolean   @default(false)
  completedAt DateTime?

  @@index([userId])
  @@index([moduleId])
  @@index([completed])
  @@index([userId, moduleId]) // Composite index for progress lookup
  @@index([userId, completed]) // Composite index for completed progress queries
}

model Certificate {
  id             String   @id @default(cuid())
  user           User     @relation(fields: [userId], references: [id])
  userId         String
  course         Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId       String
  issuedAt       DateTime @default(now())
  certificateUrl String

  @@index([userId])
  @@index([courseId])
  @@index([issuedAt])
  @@index([userId, courseId]) // Composite index for certificate lookup
}

model Payment {
  id            String   @id @default(cuid())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  course        Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId      String
  amount        Float
  tax           Float    @default(0)
  total         Float    @default(0)
  currency      String   @default("USD")
  status        String // pending, completed, failed
  provider      String // Stripe, PayPal
  transactionId String?  @unique
  metadata      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([courseId])
  @@index([status])
  @@index([currency])
  @@index([provider])
  @@index([createdAt])
  @@index([userId, status]) // Composite index for user payment history filtering
  @@index([userId, createdAt]) // Composite index for user payment history sorted by date
  @@index([courseId, status]) // Composite index for course payment analytics
}
