# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/jlm_elearning
DATABASE_URL_POOL=postgresql://user:password@localhost:5432/jlm_elearning?pgbouncer=true&connection_limit=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_REFRESH_SECRET=your_refresh_token_secret_minimum_32_characters_long

# Frontend Configuration (for CORS and redirects)
FRONTEND_URL=http://localhost:4200

# Email Service Configuration (Gmail, SendGrid, etc.)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=noreply@jlm-elearning.com

# Cloudinary Configuration (File Storage)
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_KEY=your_cloudinary_key
CLOUDINARY_SECRET=your_cloudinary_secret

# Stripe Configuration (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Logging
LOG_LEVEL=info
QUERY_LOGGING_ENABLED=false

# Tax and Pricing
DEFAULT_TAX_RATE=0.1

# Cache (Upstash Redis)
CACHE_ENABLED=false
CACHE_DEFAULT_TTL=300
UPSTASH_REDIS_REST_URL=https://your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Job Queue (QStash)
JOB_QUEUE_ENABLED=false
API_BASE_URL=http://localhost:3000
QSTASH_TOKEN=your-qstash-token
QSTASH_CURRENT_SIGNING_KEY=your-qstash-current-signing-key
QSTASH_NEXT_SIGNING_KEY=your-qstash-next-signing-key

# Content URL signing
CONTENT_URL_TTL_SECONDS=300
